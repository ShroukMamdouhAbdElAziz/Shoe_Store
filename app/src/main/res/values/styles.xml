<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/_40sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="instruction_textview_style">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/_30sdp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="text_view_input">
        <item name="android:layout_width">183dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">#0a638e</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


</resources>